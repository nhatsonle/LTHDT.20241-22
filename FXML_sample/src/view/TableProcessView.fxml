<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER" minHeight="-Infinity" prefWidth="1000.0" spacing="20" style="-fx-padding: 10;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TableProcessController">
    <!-- FCFS Panel -->
    <VBox alignment="CENTER_LEFT" prefHeight="191.0" prefWidth="600.0" spacing="10" style="-fx-border-color: black; -fx-border-width: 1;">
        <Label style="-fx-font-size: 25px; -fx-font-weight: bold;" text="Processes" textFill="#561a1a">
         <font>
            <Font name="System Bold" size="34.0" />
         </font>
         <padding>
            <Insets left="10.0" top="8.0" />
         </padding></Label>
        <TableView fx:id="table" minHeight="500.0" prefHeight="500.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="123.20000475645065" text="Process Id" />
                <TableColumn fx:id="arrivalTimeColumn" prefWidth="158.4001235961914" text="Arrival Time" />
                <TableColumn fx:id="burstTimeColumn" minWidth="0.0" prefWidth="159.99993896484375" text="Burst Time" />
                <TableColumn fx:id="priorityColumn" prefWidth="152.79995727539062" text="Priority" />
            </columns>
        </TableView>
    </VBox>
   <VBox alignment="BASELINE_CENTER" prefHeight="200.0">
      <children>
         <Label text="UPDATE" textFill="#612424">
            <VBox.margin>
               <Insets bottom="20.0" />
            </VBox.margin>
            <font>
               <Font name="System Bold" size="16.0" />
            </font>
         </Label>
         <VBox>
            <children>
               <HBox alignment="CENTER">
                  <children>
                     <Label prefHeight="18.0" prefWidth="90.0" text="ID Process" />
                     <TextField fx:id="idText" />
                  </children>
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
               </HBox>
               <HBox alignment="CENTER">
                  <children>
                     <Label prefHeight="18.0" prefWidth="90.0" text="Arrival Time" />
                     <TextField fx:id="arrivalTimeText" />
                  </children>
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
               </HBox>
               <HBox alignment="CENTER">
                  <children>
                     <Label prefHeight="18.0" prefWidth="90.0" text="Burst Time" />
                     <TextField fx:id="burstTimeText" />
                  </children>
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
               </HBox>
               <HBox alignment="CENTER">
                  <children>
                     <Label prefHeight="18.0" prefWidth="90.0" text="Priority" />
                     <TextField fx:id="priorityText" prefHeight="26.0" prefWidth="150.0" />
                  </children>
               </HBox>
            </children>
            <VBox.margin>
               <Insets bottom="20.0" />
            </VBox.margin>
         </VBox>
         <ButtonBar prefHeight="40.0" prefWidth="200.0">
           <buttons>
               <Button mnemonicParsing="false" onAction="#addProcess" text="Add " />
               <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#removeProcess" text="Remove " />
               <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#editProcess" text="Edit " />
               <Button fx:id="proceed" minWidth="-Infinity" onAction="#updateProcess" text="Proceed" visible="false" />
           </buttons>
         </ButtonBar>
         <ButtonBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0">
            <buttons>
               <Button maxWidth="-Infinity" mnemonicParsing="false" onAction="#clearProcessList" text="Clear" translateX="-21.0">
                  <cursor>
                     <Cursor fx:constant="OPEN_HAND" />
                  </cursor>
               </Button>
            </buttons>
         </ButtonBar>
      </children>
   </VBox>
</HBox>
