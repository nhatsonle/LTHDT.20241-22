<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" spacing="20" style="-fx-padding: 10;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LiveOutputController">
                <!-- Live Output Table -->
                <VBox prefHeight="222.0" prefWidth="483.0" spacing="10" style="-fx-border-color: black; -fx-border-width: 1;">
                    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Live Output Table">
                        <VBox.margin>
                            <Insets left="165.0" />
                        </VBox.margin>
                    </Label>
                    <TableView fx:id="table">
                        <columns>
                            <TableColumn fx:id="idColumn" text="Process" />
                            <TableColumn fx:id="arrivalTimeColumn" prefWidth="89.59998321533203" text="Arrival Time" />
                            <TableColumn fx:id="burstTimeColumn" prefWidth="80.800048828125" text="Burst Time" />
                            <TableColumn fx:id="turnAroundTimeColumn" prefWidth="112.00007629394531" text="Turnaround Time" />
                            <TableColumn fx:id="waitingTimeColumn" prefWidth="116.00006103515625" text="Waiting Time" />
                        </columns>
                    </TableView>
                </VBox>
					
                <!-- Scheduling Metrics -->
                <VBox prefWidth="300" spacing="10" style="-fx-border-color: black; -fx-border-width: 1;">
                    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Scheduling Metrics">
                        <VBox.margin>
                            <Insets left="56.0" top="42.0" />
                        </VBox.margin>
                    </Label>
                    <Label prefHeight="27.0" prefWidth="242.0" style="-fx-background-color: cyan; -fx-padding: 5;" text="Average Wait Time: 1.50 s">
                        <VBox.margin>
                            <Insets left="28.0" />
                        </VBox.margin>
                    </Label>
                    <Label prefHeight="27.0" prefWidth="243.0" style="-fx-background-color: cyan; -fx-padding: 5;" text="Average Turn Around Time: 5.50 s">
                        <VBox.margin>
                            <Insets left="27.0" />
                        </VBox.margin>
                    </Label>
                    <Label prefHeight="27.0" prefWidth="242.0" style="-fx-background-color: cyan; -fx-padding: 5;" text="Average Completion Time: 9.00 s">
                        <VBox.margin>
                            <Insets bottom="1.0" left="29.0" />
                        </VBox.margin>
                    </Label>
                </VBox>
</HBox>
