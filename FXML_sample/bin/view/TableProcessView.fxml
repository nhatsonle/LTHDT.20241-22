<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER" minHeight="-Infinity" spacing="20" style="-fx-padding: 10;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TableProcessController">
    <!-- FCFS Panel -->
    <VBox alignment="CENTER" prefHeight="191.0" prefWidth="600.0" spacing="10" style="-fx-border-color: black; -fx-border-width: 1;">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="FCFS" />
        <TableView fx:id="table" minHeight="500.0" prefHeight="500.0" prefWidth="678.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="123.20000475645065" text="Process Id" />
                <TableColumn fx:id="arrivalTimeColumn" prefWidth="158.4001235961914" text="Arrival Time" />
                <TableColumn fx:id="burstTimeColumn" minWidth="0.0" prefWidth="159.99993896484375" text="Burst Time" />
                <TableColumn fx:id="priorityColumn" prefWidth="152.79995727539062" text="Priority" />
            </columns>
        </TableView>
    </VBox>
   <VBox alignment="BASELINE_CENTER" prefHeight="200.0" prefWidth="300.0">
      <children>
         <Label text="UPDATE" textFill="#612424">
            <VBox.margin>
               <Insets bottom="20.0" />
            </VBox.margin>
            <font>
               <Font name="System Bold" size="16.0" />
            </font>
         </Label>
         <VBox>
            <children>
               <HBox alignment="CENTER">
                  <children>
                     <Label prefHeight="18.0" prefWidth="90.0" text="ID Process" />
                     <TextField fx:id="idText" />
                  </children>
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
               </HBox>
               <HBox alignment="CENTER">
                  <children>
                     <Label prefHeight="18.0" prefWidth="90.0" text="Arrival Time" />
                     <TextField fx:id="arrivalTimeText" />
                  </children>
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
               </HBox>
               <HBox alignment="CENTER">
                  <children>
                     <Label prefHeight="18.0" prefWidth="90.0" text="Burst Time" />
                     <TextField fx:id="burstTimeText" />
                  </children>
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
               </HBox>
               <HBox alignment="CENTER">
                  <children>
                     <Label prefHeight="18.0" prefWidth="90.0" text="Priority" />
                     <TextField fx:id="priorityText" prefHeight="26.0" prefWidth="150.0" />
                  </children>
               </HBox>
            </children>
            <VBox.margin>
               <Insets bottom="20.0" />
            </VBox.margin>
         </VBox>
         <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
               <Button maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#addProcess" text="Add Process">
                  <HBox.margin>
                     <Insets right="12.0" />
                  </HBox.margin></Button>
               <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#removeProcess" text="Remove Process">
                  <HBox.margin>
                     <Insets right="12.0" />
                  </HBox.margin></Button>
               <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#editProcess" text="Edit Process">
                  <HBox.margin>
                     <Insets right="12.0" />
                  </HBox.margin></Button>
               <Button fx:id="proceed" minWidth="-Infinity" onAction="#updateProcess" text="Proceed" visible="false" />
            </children>
            <VBox.margin>
               <Insets bottom="20.0" />
            </VBox.margin>
         </HBox>
         <HBox prefHeight="50.0" prefWidth="359.0">
            <children>
               <Button maxWidth="-Infinity" mnemonicParsing="false" text="Run" textFill="#a40c0c">
                  <HBox.margin>
                     <Insets right="20.0" />
                  </HBox.margin>
                  <cursor>
                     <Cursor fx:constant="CLOSED_HAND" />
                  </cursor>
               </Button>
               <Button maxWidth="-Infinity" mnemonicParsing="false" onAction="#clearProcessList" text="Clear">
                  <cursor>
                     <Cursor fx:constant="OPEN_HAND" />
                  </cursor>
               </Button>
            </children>
         </HBox>
      </children>
   </VBox>
</HBox>
